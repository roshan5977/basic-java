package com.jsp.twoDArray;

public class SumOfEachRow {

	public static void main(String[] args) {
     int [][]a= {
    		 {1,2,3},
    		 {4,5,6},
    		 {7,8,9}
     };
     //row sum
     int sum=0,row=0;
     for(int[]x:a)
     {
    	 sum=0;
    	 for(int b:x)
    	 {
    		 sum+=b;
    	 }
    	 System.out.println("row "+(++row)+" sum:"+sum);
     }
     int summ=0;
     //column sum
     for(int i=0;i<a.length;i++)
     {summ=0;
    	 for(int j=0;j<a.length;j++)
    	 {
        	 summ+=a[j][i]; 
    	 }     
    	 System.out.println("column sum:"+summ);
    	 }
     
	}

}
